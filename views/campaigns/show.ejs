<div class="card">
  <!-- <img class="card-img-top" src="" alt="Card image cap"> -->
  <div class="card-body">
    <h5 class="card-title">
      <%= campaign.title %>
    </h5>

    <p class="card-text">
      <%= campaign.description %>
    </p>
    <p class="card-text">
      <small class="text-muted">Created by
        <%= campaign.creator.email %>
      </small>
    </p>
    <p class="card-text">
      Goal:
      <%= campaign.goal %>â‚¬
        <br> Closes
        <%= moment(campaign.deadline).fromNow() %>
          <div class="progress">
            <div class="progress-bar bg-info" role="progressbar" style="width: 37%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="<%= campaign.goal %>"></div>
          </div>
    </p>
  </div>
</div>
